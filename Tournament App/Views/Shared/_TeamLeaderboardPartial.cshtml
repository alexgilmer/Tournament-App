@model Tournament_App.Models.ViewModels.Home.TeamLeaderboardUpdateModel

<div class="card-container">
    <section>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Points</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var listing in Model.AllTeamPointsList)
                {
                    <tr
                        style="@listing.StyleText"
                    >
                        <td>@listing.Name</td>
                        <td>@listing.PointsText</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <section>
        <div class="card-container">
            <p>These are the flags you should be trying to look for at this stage of the competition</p>
            <div class="card-body d-flex flex-row flex-wrap">
                @foreach (var targetAnswer in Model.TeamAnswerListing.TargetAnswers)
                {
                    <partial name="_AnswerPartial" model="@targetAnswer" />
                }
            </div>
        </div>
    </section>

    <section>
        <div class="card-container">
            <p>These are the flags your team has already captured</p>
            <div class="card-body d-flex flex-row flex-wrap">
                @foreach (var targetAnswer in Model.TeamAnswerListing.CapturedAnswers)
                {
                    <partial name="_AnswerPartial" model="@targetAnswer" />
                }
            </div>
        </div>
    </section>
</div>