@model Tournament_App.Models.ViewModels.Home.NeutralLeaderboardUpdateModel

<div class="card-container" id="card-container">
    @foreach (var team in Model.Teams)
    {
        <div class="card">
            <div class="card-header">
                <h4>@team.Name - @team.PointsScored points</h4>
                <h5>
                    @foreach (var member in team.Members)
                    {
                        <span class="badge bg-info rounded-pill">@member.Name</span>
                    }
                </h5>
            </div>

            <div class="card-body d-flex flex-row flex-wrap">
                @foreach (var answer in team.Answers)
                {
                    <partial name="_AnswerPartial" model="@answer"/>
                }
            </div>
        </div>
    }
</div>