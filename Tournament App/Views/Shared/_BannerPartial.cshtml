@using Tournament_App.Models.ViewModels.Banners
@model IList<BannerPartialViewModel>

<div class="carousel-item active">
    <img src="https://placekitten.com/700/175?image=1" class="d-block w-100" alt="">
</div>
@foreach(var b in Model)
{
    <div class="carousel-item">
        @if(b.HasLink)
        {
            <a href="@b.Link" target="_blank">
                <img src="@b.Link" class="d-block w-100" alt="">
            </a>
        } else
        {
            <img src="@b.ImagePath" class="d-block w-100" alt="">
        }
    </div>
}
