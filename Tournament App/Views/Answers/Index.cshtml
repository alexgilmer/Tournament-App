@model IEnumerable<Answer>

<h1>Answers Index</h1>

<p>
    <a asp-controller="Answers" asp-action="Create">Create new answer</a> | 
    <a asp-controller="Answers" asp-action="CreateMany">Create many answers from JSON</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Points
            </th>
            <th>
                Functions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var answer in Model)
        {
            <tr>
                <td>
                    @answer.Name
                </td>
                <td>
                    @answer.Description
                </td>
                <td>
                    @answer.PointValue
                </td>
                <td>
                    <a asp-controller="Answer" asp-action="Edit" asp-route-id="@answer.Id">Edit</a> |
                    <a asp-controller="Answer" asp-action="Delete" asp-route-id="@answer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>