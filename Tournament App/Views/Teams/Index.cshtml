@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model Tournament_App.Models.ViewModels.Teams.IndexViewModel

<h1>Welcome to the Teams Index page</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Team
            </th>
            <th>
                Points
            </th>
            <th>
                Member
            </th>
            @if(SignInManager.IsSignedIn(User) && User.IsInRole(Constants.AdminRole))
            {
                <th>
                    Functions
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach(var group in Model.Groups)
        {
            @for(int i = 0; i < group.Members.Count; i++)
            {
                <tr>
                    @if(i == 0)
                    {
                        <td rowspan="@group.Members.Count">
                            @group.Name
                        </td>
                        <td rowspan="@group.Members.Count">
                            @group.Points
                        </td>
                    }
                    <td>
                        @group.Members[i].Name
                    </td>
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole(Constants.AdminRole))
                    {
                        <td>
                            <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@group.Members[i].ApplicationUserId">Edit Member</a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>