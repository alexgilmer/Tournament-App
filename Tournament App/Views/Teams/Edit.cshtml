@using Tournament_App.Models.ViewModels.Teams
@model EditTeamViewModel

@if(Model != null)
{
    <h1>You are currently editing team: @Model.Team.Name</h1>

    <form method="post" asp-controller="Teams" asp-action="Edit">
        <input type="hidden" name="TeamId" value="@Model.Team.Id" />
        <div class="mb-3">
            <label>
                New team name:
                <input type="text" name="NewTeamName" placeholder="Team name" id="NewTeamName" value="@Model.Team.Name"/>
            </label>
        </div>
        <div class="mb-3">
            <label>
                New team Api Alias:
                <input type="text" name="NewTeamApiAlias" placeholder="Team Api Alias" id="NewTeamApiAlias" value="@Model.Team.ApiAlias"/>
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
else
{
    <h1>No team selected for editing.</h1>
}